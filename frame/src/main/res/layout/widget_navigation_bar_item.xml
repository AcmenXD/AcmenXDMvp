<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center">

    <TextView
        android:id="@+id/navigation_bar_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/widget_navigation_bar_home"
        android:gravity="center"
        android:text="首页"
        android:textColor="#000"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/navigation_bar_item_tv_red"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginLeft="-8dp"
        android:layout_toRightOf="@id/navigation_bar_item_tv_name"
        android:background="@mipmap/navigation_bar_red_point"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="10sp"/>
</RelativeLayout>
